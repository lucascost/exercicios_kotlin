<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FF2E2E2E"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#FF2E2E2E"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/txt_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="Title"
            android:textColor="#a9a9a9"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            app:layout_constraintStart_toEndOf="@+id/img_capa"
            app:layout_constraintTop_toTopOf="@+id/img_capa" />

        <ImageView
            android:id="@+id/img_capa"
            android:layout_width="65dp"
            android:layout_height="95dp"
            android:background="#000"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"
            app:srcCompat="@drawable/um_lugar_silencioso"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="( genero/genero )"
            android:textColor="#a9a9a9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_capa"
            app:layout_constraintTop_toBottomOf="@id/txt_titulo" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>